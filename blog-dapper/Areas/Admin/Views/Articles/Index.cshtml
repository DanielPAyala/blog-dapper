@model IEnumerable<blog_dapper.Models.Article>

@{
    ViewData["Title"] = "Lista de Artículos";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-9">
        <h1>Administrador de Artículos</h1>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary float-end">
            <i class="bi bi-plus-square"></i>
            &nbsp;Agregar Artículo
        </a>
    </div>
</div>

<div class="card bg-light p-3">
    <table class="table" id="tblArticles">
        <thead>
        <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Imagen</th>
            <th>Estado</th>
            <th>Categoría</th>
            <th>Fecha de Creación</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts
{
    <script src="~/js/articles.js"></script>
}
