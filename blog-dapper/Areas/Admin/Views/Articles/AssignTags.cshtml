@model blog_dapper.Models.Article

@{
    ViewBag.Title = "Asignar Etiquetas";
}

<h1>Asignar Etiquetas</h1>
<form asp-action="AssignTags">
    <div class="row p-4">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ArticleId" type="hidden"/>
            <div>
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" readonly/>
            </div>
        </div>
        <div class="col-6">
            <label class="form-label">Etiquetas</label>
            <div class="mt-3">
                @Html.DropDownList("TagId", (SelectList)ViewBag.Tags, "-Selecciona una etiqueta-", new { @class = "form-control" })
            </div>
            <div class="mt-4 d-flex justify-content-between gap-2">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Guardar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-warning form-control">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}